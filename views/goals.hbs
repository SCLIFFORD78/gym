{{> menu id="goals"}}


<table class="ui table">
  <thead>
    <tr>
        <th>Measurement</th>
        <th>Target</th>
        <th>Target Date</th>
        <th>Comments</th>
        <th>Status</th>
    </tr>
  </thead>
  <tbody>
    {{#each goals}}
      <tr>
        <td>
            {{measurements}}
        </td>
        <td>
            {{target}}
        </td>
        <td>
            {{targetDate}}
        </td>
        <td>
            {{comments}}
        </td>
        <td>
            {{status}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
<section class="ui segment">
  {{> addGoal}}
</section>

