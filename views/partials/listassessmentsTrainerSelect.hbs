{{#each assessments}}
<table class="ui fixed table ">

    <thead>
    <tr>
        <th>Date</th>
        <th>Weight</th>
        <th>Chest</th>
        <th>Thigh</th>
        <th>Upper Arm</th>
        <th>Waist</th>
        <th>Hips</th>
        <th>Trend</th>
        <th>Comments</th>
    </tr>
    </thead>
    <tbody>
    
    <tr>
        <td>
            {{time}}
        </td>
        <td>
            {{weight}}
        </td>
        <td>
            {{chest}}
        </td>
        <td>
            {{thigh}}
        </td>
        <td>
            {{upperArm}}
        </td>
        <td>
            {{waist}}
        </td>
        <td>
            {{hips}}
        </td>
        <td>
            {{#if trend}}
            <a class="ui teal tag label"></a>
            {{else}}
            <a class="ui red tag label"></a>
            {{/if}}
        </td>
        <td>
            {{comments}}
        </td>
    </tr>


    </tbody>
  

</table>
<form action="/listassessmentsTrainerSelect/updateAssessment/{{id}}/{{userid}}" class="ui form" method="POST">


    <div class="field">
        <label>Comment</label>
        <input name="comments" placeholder="Comment" type="text">
    </div>


    <button class="ui blue submit button">Update Comment</button>
</form>
{{/each}}